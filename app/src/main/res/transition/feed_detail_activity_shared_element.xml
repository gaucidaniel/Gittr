<?xml version="1.0" encoding="utf-8"?>
<transitionSet
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together"
    android:duration="350"
    android:interpolator="@android:interpolator/fast_out_slow_in">

    <transitionSet>
        <targets>
            <target android:targetId="@id/event_item_title"/>
            <target android:targetId="@id/event_item_details"/>
            <target android:targetId="@id/event_item_profile_picture"/>
            <target android:targetId="@id/event_item_date"/>
        </targets>
        <changeBounds/>
        <changeTransform/>
        <changeClipBounds/>
        <changeImageTransform/>
    </transitionSet>

    <transitionSet>
        <targets>
            <target android:targetId="@id/feed_detail_background"/>
        </targets>
        <autoTransition/>
    </transitionSet>
</transitionSet>