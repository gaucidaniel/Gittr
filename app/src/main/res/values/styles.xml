<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="Text.WithBackground">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:background">@drawable/rounded_background_light_grey</item>
    </style>
</resources>
