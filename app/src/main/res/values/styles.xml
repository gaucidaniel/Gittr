<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="SearchTheme" parent="AppTheme">

    </style>

    <style name="Text">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="Text.WithBackground">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:background">@drawable/rounded_background_light_grey</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ExpandedToolbarAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:colorBackground">@color/greyLight</item>
    </style>
</resources>
